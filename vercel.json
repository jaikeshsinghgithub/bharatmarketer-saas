{
    "buildCommand": "echo 'No build required for static site'",
    "outputDirectory": ".",
    "rewrites": [
        {
            "source": "/dashboard",
            "destination": "/dashboard.html"
        },
        {
            "source": "/((?!assets|backend).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}